<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:padding="8dp">

        <TextView
            android:id="@+id/request_employee_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Employee name"
            android:textStyle="bold"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/request_employee_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Employee Code"
            android:gravity="center"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/request_employee_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date 2019/03/12"
            android:gravity="center"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/request_employee_reason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Reason for day off"
            android:gravity="center"
            android:textSize="17sp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Decline"
                android:textSize="11dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Accept"
                android:textSize="11dp" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>

